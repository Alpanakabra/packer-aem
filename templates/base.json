{
  "variables": {
    "aws_region": "ap-southeast-2",
    "aws_user": "ec2-user",
    "iam_instance_profile": "",
    "aws_vpc_id": "",
    "aws_subnet_id": "",
    "aws_security_group_id": "",
    "component": "base",
    "version": "x.x.x",
    "base_instance_type": "t2.micro",
    "base_ami_source_ami": "ami-39ac915a",
    "var_file": "conf/template-vars.json",
    "http_proxy": "",
    "https_proxy": "",
    "puppet_bin_dir": "/opt/puppetlabs/bin",
    "owner": "",
    "cost_center": ""
  },
  "builders": [
    {
      "name": "base",
      "type": "amazon-ebs",
      "ssh_username": "{{user `aws_user`}}",
      "ami_description": "Packer AEM bootstrap AMI {{user `component`}}-{{user `version`}}-{{timestamp}}",
      "ami_name": "{{user `component`}}-{{user `version`}}-{{timestamp}}",
      "instance_type": "{{user `base_instance_type`}}",
      "region": "{{user `aws_region`}}",
      "iam_instance_profile": "{{ user `iam_instance_profile` }}",
      "vpc_id": "{{user `aws_vpc_id`}}",
      "subnet_id": "{{user `aws_subnet_id`}}",
      "security_group_id": "{{user `aws_security_group_id`}}",
      "source_ami": "{{user `base_ami_source_ami`}}",
      "run_tags": {
        "Application Id": "Adobe Experience Manager (AEM)",
        "Application Role": "{{user `component`}}",
        "Version": "{{user `version`}}",
        "Name": "Packer Builder - AEM {{user `component`}} AMI ({{user `version`}})",
        "Owner": "{{user `owner`}}",
        "Cost Center": "{{user `cost_center`}}"
      },
      "tags": {
        "Application Id": "Adobe Experience Manager (AEM)",
        "Application Role": "{{user `component`}}",
        "Version": "{{user `version`}}",
        "Name": "AEM {{user `component`}} AMI ({{user `version`}})",
        "Owner": "{{user `owner`}}",
        "Cost Center": "{{user `cost_center`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "provisioners/add_http_proxy.sh",
      "environment_vars" : [
        "HTTP_PROXY={{user `http_proxy`}}",
        "HTTPS_PROXY={{user `https_proxy`}}"
      ]
    },
    {
      "type": "shell",
      "script": "provisioners/install_puppet.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E {{ .Path }}",
      "environment_vars" : [
        "PUPPET_BIN_DIR={{user `puppet_bin_dir`}}"
      ]
    },
    {
      "type": "file",
      "source": "conf/hieradata",
      "destination": "/tmp"
    },
    {
      "type": "file",
      "source": "test/serverspec",
      "destination": "/tmp"
    },
    {
      "type": "puppet-masterless",
      "manifest_file": "provisioners/puppet/manifests/{{user `component`}}.pp",
      "hiera_config_path": "conf/hiera.yaml",
      "module_paths": [
        "modules",
        "provisioners/puppet/modules"
      ],
      "puppet_bin_dir": "{{user `puppet_bin_dir`}}"
    },
    {
      "type": "shell",
      "script": "provisioners/cleanup.sh"
    }
  ],
  "post-processors": [
    {
      "type": "json-updater",
      "ami_id": {
        "{{user `var_file`}}": [
          "java_ami_source_ami",
          "httpd_ami_source_ami"
        ]
      }
    }
  ]
}
