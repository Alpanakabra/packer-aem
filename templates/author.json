{
  "variables": {
    "aws_region": "ap-southeast-2",
    "aws_user": "ec2-user",
    "iam_instance_profile": "",
    "aws_vpc_id": "",
    "aws_subnet_id": "",
    "aws_security_group_id": "",
    "component": "author",
    "version": "x.x.x",
    "author_instance_type": "m3.large",
    "author_ami_source_ami": "ami-xxxxxxxx",
    "var_file": "conf/template-vars.json"
  },
  "builders": [
    {
      "name": "author",
      "type": "amazon-ebs",
      "ssh_username": "{{user `aws_user`}}",
      "ami_description": "Packer AEM bootstrap AMI {{user `component`}}-{{user `version`}}-{{timestamp}}",
      "ami_name": "{{user `component`}}-{{user `version`}}-{{timestamp}}",
      "instance_type": "{{user `author_instance_type`}}",
      "region": "{{user `aws_region`}}",
      "iam_instance_profile": "{{ user `iam_instance_profile` }}",
      "vpc_id": "{{user `aws_vpc_id`}}",
      "subnet_id": "{{user `aws_subnet_id`}}",
      "security_group_id": "{{user `aws_security_group_id`}}",
      "source_ami": "{{user `author_ami_source_ami`}}",
      "tags": {
        "component": "{{user `component`}}",
        "version": "{{user `version`}}",
        "Name": "AEM {{user `component`}} AMI ({{user `version`}})"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "conf/hieradata",
      "destination": "/tmp"
    },
    {
      "type": "file",
      "source": "test/serverspec",
      "destination": "/tmp"
    },
    {
      "type": "puppet-masterless",
      "staging_directory": "/tmp/packer-puppet-masterless-0",
      "manifest_file": "provisioners/puppet/manifests/ruby_aem.pp",
      "hiera_config_path": "conf/hiera.yaml",
      "module_paths": [
        "modules",
        "provisioners/puppet/modules"
      ],
      "puppet_bin_dir": "/opt/puppetlabs/bin"
    },
    {
      "type": "file",
      "source": "provisioners/puppet/templates",
      "destination": "/tmp"
    },
    {
      "type": "puppet-masterless",
      "staging_directory": "/tmp/packer-puppet-masterless-1",
      "manifest_file": "provisioners/puppet/manifests/{{user `component`}}.pp",
      "hiera_config_path": "conf/hiera.yaml",
      "module_paths": [
        "modules",
        "provisioners/puppet/modules"
      ],
      "puppet_bin_dir": "/opt/puppetlabs/bin"
    },
    {
      "type": "shell",
      "script": "provisioners/cleanup.sh"
    }
  ]
}
