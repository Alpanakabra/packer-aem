# vim: ai ts=2 sw=2 sts=2 et ft=sh
# Set up environment proxy variables.
export PROXY_SERVER_NAME="<%= $proxy_server_name %>"
export PROXY_SERVER_PORT="<%= $proxy_server_port %>"
export PROXY_NO_PROXY_COMMA="<%= $proxy_no_proxy.join(',') %>"
export PROXY_NO_PROXY_PIPE="<%= $proxy_no_proxy.join('|') %>"

export http_proxy="http://${PROXY_SERVER_NAME}:${PROXY_SERVER_PORT}/"
export https_proxy="http://${PROXY_SERVER_NAME}:${PROXY_SERVER_PORT}/"
export no_proxy="${PROXY_NO_PROXY_COMMA}"
